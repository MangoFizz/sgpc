<Window x:Class="SGSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGSC"
        xmlns:pages="clr-namespace:SGSC.Pages"
        xmlns:frames="clr-namespace:SGSC.Frames"
        mc:Ignorable="d"
        Title="Sistema de gestión de solucitudes crediticias" SizeToContent="WidthAndHeight" Background="White">
    <Grid>
        <Viewbox Name="MainViewBox">
            <Grid>
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Height="720" Width="1280">
                    <Frame.Content>
                        <pages:LogIn/>
                    </Frame.Content>
                </Frame>
                <Frame Name="NotificationsFrame" NavigationUIVisibility="Hidden" >
                    <Frame.Content>
                        <frames:NotificationsPanelFrame/>
                    </Frame.Content>
                </Frame>
            </Grid>
            
            
        </Viewbox>

    </Grid>
</Window>
