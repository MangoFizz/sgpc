<Page x:Class="SGSC.Pages.ViewCreditRequests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SGSC.Pages"
      xmlns:frames="clr-namespace:SGSC.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ViewCreditRequests">

    <Grid Background="White">


        <Button Style="{StaticResource Menubutton}" FontSize="15" HorizontalAlignment="Left" Margin="16,215,0,0" VerticalAlignment="Top" Width="72" Height="75">
            <Image Source="../Images/icon-home-checked.png" Height="70" Width="50"/>
        </Button>
        <Button Style="{StaticResource Menubutton}" FontSize="15" HorizontalAlignment="Left" Margin="16,295,0,0" VerticalAlignment="Top" Width="72" Height="75">
            <Image Source="../Images/icon-find-customer.png" Height="70" Width="50"/>
        </Button>
        <Button Style="{StaticResource Menubutton}" FontSize="15" HorizontalAlignment="Left" Margin="16,375,0,0" VerticalAlignment="Top" Width="72" Height="75">
            <Image Source="../Images/icon-board.png" Height="70" Width="50"/>
        </Button>

        <Button Name="LogoutButton" Background="White" Style="{StaticResource Menubutton}" FontSize="15" HorizontalAlignment="Left" Margin="16,630,0,0" VerticalAlignment="Top" Width="72" Height="75" Click="LogoutButton_Click">
            <Image Source="../Images/icon-logout.png" Height="70" Width="50"/>
        </Button>

        <Image Source="../Images/coin-logo.png"  Margin="16,117,1192,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="72" Height="75" />

        <Image Source="../Images/line.png"  HorizontalAlignment="Left" Margin="88,0,0,0" VerticalAlignment="Center" Width="72" Height="720" />

        <Grid Margin="118,75,22,67">
            <Grid.RowDefinitions>
                <RowDefinition Height="283*"/>
                <RowDefinition Height="285*"/>
            </Grid.RowDefinitions>
            <Grid Height="531" Margin="15,22,15,0" Grid.RowSpan="2" VerticalAlignment="Top">

                <DataGrid x:Name="creditRequestsDataGrid" AutoGenerateColumns="False" Margin="-1,73,1,0" Height="456" VerticalAlignment="Top">
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Style.Triggers>
                                <!-- Alternar estilo para filas impares -->
                                <DataTrigger Binding="{Binding AlternationIndex, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}, Mode=FindAncestor}}" Value="1">
                                    <Setter Property="Background" Value="LightGreen"/>
                                </DataTrigger>
                                <!-- Aplicar estilo por defecto para filas pares -->
                                <DataTrigger Binding="{Binding AlternationIndex, RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}, Mode=FindAncestor}}" Value="0">
                                    <Setter Property="Background" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <!-- Definición de las columnas -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="RFC" IsReadOnly="True" CanUserResize="False" Binding="{Binding Rfc}" Width="*" />
                        <DataGridTextColumn Header="Fecha de Creación" IsReadOnly="True" CanUserResize="False" Binding="{Binding CreationDate}" Width="*" />
                        <DataGridTextColumn Header="Nombre Completo" IsReadOnly="True" CanUserResize="False" Binding="{Binding CustomerName}" Width="*" />
                        <DataGridTextColumn Header="Estado" IsReadOnly="True" CanUserResize="False" Binding="{Binding Status}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Margin="0,0,10,481">



                    <TextBox x:Name="tbRfc" Margin="0,5,850,5" Style="{StaticResource CustomTextBoxStyle}" Height="40" Width="250" TextChanged="TextBox_TextChanged" />

                    <TextBox x:Name="tbCustomerName" Margin="425,5,425,5" Style="{StaticResource CustomTextBoxStyle}" Height="40" Width="250" TextChanged="TextBox_TextChanged"/>
                    <TextBox x:Name="tbStatus" Margin="815,5,35,5" Style="{StaticResource CustomTextBoxStyle}" Height="40" Width="250" TextChanged="TextBox_TextChanged" />

                </Grid>

            </Grid>
        </Grid>

        <Frame RenderTransformOrigin="0.5,0.5" Margin="602,6,68,626">
            <Frame.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.111"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Frame.RenderTransform>
            <Frame.Content>
                <frames:UserSessionFrame Margin="604,23,-221,-20" RenderTransformOrigin="0.5,0.5">
                    <frames:UserSessionFrame.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </frames:UserSessionFrame.RenderTransform>
                </frames:UserSessionFrame>
            </Frame.Content>
        </Frame>

        <Grid Height="52" Margin="455,658,-132,10">



            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,0,2" Width="338">
                <Button Content="1" Style="{StaticResource ButtonStyle}" Click="NextPageRequest"/>
                <Button Content="2" Style="{StaticResource ButtonStyle}" Click="NextPageRequest"/>
                <Button Content="3" Style="{StaticResource ButtonStyle}" Click="NextPageRequest"/>
                <Button Content="4" Style="{StaticResource ButtonStyle}" Click="NextPageRequest"/>
                <Button Content="5" Style="{StaticResource ButtonStyle}" Click="NextPageRequest"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal" Margin="414,0,0,0" Width="411" Height="52" RenderTransformOrigin="0.5,0.5">
                <Button Content="Ver Detalles" Style="{StaticResource Button}" Background="#FFFCDC2A" FontSize="22" Height="33" Width="170"/>
                <Button Content="Corregir Solicitud" Style="{StaticResource Button}" Background="#FF114232" Foreground="White" FontSize="22" Height="32" RenderTransformOrigin="0.5,0.5" Width="197"/>
            </StackPanel>


        </Grid>


    </Grid>
</Page>
